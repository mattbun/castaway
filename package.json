{
  "name": "castaway",
  "version": "0.1.0",
  "description": "",
  "main": "dist/index.js",
  "private": "true",
  "bin": "bin/castaway",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "debug": "node --inspect-brk dist/index.js",
    "test": "jest"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "async-mqtt": "2.6.1",
    "castv2": "0.1.10",
    "got": "11.8.5",
    "yargs": "16.2.0"
  },
  "devDependencies": {
    "@types/jest": "26.0.22",
    "@types/node": "14.14.41",
    "conventional-changelog-conventionalcommits": "4.6.0",
    "jest": "26.6.3",
    "semantic-release": "17.4.4",
    "ts-jest": "26.5.5",
    "ts-node": "9.1.1",
    "typescript": "^4.1.3"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "build",
              "scope": "deps",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "build",
                "section": "Dependencies and Other Build Updates",
                "hidden": false
              }
            ]
          }
        }
      ],
      "@semantic-release/github"
    ]
  }
}
